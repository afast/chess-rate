.container
  .col-md-6
    .page-header
      %h3
        = t('analyze') + ": #{description}"
        %small
          = name

    = form_tag path: path, role: 'form', class: 'form-horizontal' do
      .form-group
        = label_tag :time, t('time.label'), class: 'col-sm-4'
        .input-group
          = number_field_tag :time, 3000, step: 100, min: 300, class: 'form-control'
          %span.input-group-addon
            ms
      .form-group
        = label_tag :tie_threshold, t('tie_threshold'), class: 'col-sm-4'
        .input-group
          = number_field_tag :tie_threshold, 1, step: 0.5, min: 0.01, class: 'form-control'
          %span.input-group-addon
            cp
      .form-group
        = label_tag :blunder_threshold, t('blunder_threshold'), class: 'col-sm-4'
        .input-group
          = number_field_tag :blunder_threshold, 3, step: 0.1, min: 1, class: 'form-control'
          %span.input-group-addon
            cp
      .form-group
        = label_tag :reference_database_id, t('reference_database.label'), class: 'col-sm-4'
        .col-sm-8
          = select_tag :reference_database_id, options_from_collection_for_select(ReferenceDatabase.all, :id, :name), class: 'form-control'
      .form-group
        .col-sm-8
          .actions
            = submit_tag t('process'), class: 'btn'

