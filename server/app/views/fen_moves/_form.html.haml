= form_for @fen_move do |f|
  - if @fen_move.errors.any?
    #error_explanation
      %h2= "#{pluralize(@fen_move.errors.count, "error")} prohibited this fen_move from being saved:"
      %ul
        - @fen_move.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :reference_database_id
    = f.number_field :reference_database_id
  .field
    = f.label :move
    = f.text_field :move
  .field
    = f.label :white
    = f.number_field :white
  .field
    = f.label :black
    = f.number_field :black
  .field
    = f.label :draw
    = f.number_field :draw
  .actions
    = f.submit t('Save')
