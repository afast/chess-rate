= form_for @move do |f|
  - if @move.errors.any?
    #error_explanation
      %h2= "#{pluralize(@move.errors.count, "error")} prohibited this move from being saved:"
      %ul
        - @move.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :side
    = f.check_box :side
  .field
    = f.label :pgn
    = f.text_field :pgn
  .field
    = f.label :lan
    = f.text_field :lan
  .field
    = f.label :player_value
    = f.text_field :player_value
  .field
    = f.label :annotator_move
    = f.text_field :annotator_move
  .field
    = f.label :annotator_value
    = f.text_field :annotator_value
  .field
    = f.label :number
    = f.number_field :number
  .field
    = f.label :comments
    = f.text_area :comments
  .field
    = f.label :check
    = f.check_box :check
  .field
    = f.label :mate
    = f.check_box :mate
  .actions
    = f.submit 'Save'
