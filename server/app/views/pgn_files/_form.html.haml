= form_for @pgn_file do |f|
  - if @pgn_file.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pgn_file.errors.count, "error")} prohibited this pgn_file from being saved:"
      %ul
        - @pgn_file.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :pgn_file, 'File'
    = f.file_field :pgn_file
  .actions
    = f.submit 'Save', class: 'btn'
