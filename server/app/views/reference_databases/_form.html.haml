= form_for @reference_database do |f|
  - if @reference_database.errors.any?
    #error_explanation
      %h2= "#{pluralize(@reference_database.errors.count, "error")} prohibited this reference_database from being saved:"
      %ul
        - @reference_database.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :path
    = f.text_field :path
  .actions
    = f.submit 'Save'
